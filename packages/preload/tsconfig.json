{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"],
      "/@api/*": ["../api/src/*"]
    }
  },
  "include": ["src/**/*.ts", "exposedInMainWorld.d.ts", "../../types/**/*.d.ts", "../api/src/**/*.ts"]
}
